<UserControl x:Class="Zentity.VisualExplorer.NoResultPopUpWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="auto" Height="auto">
	<Grid x:Name="LayoutRoot">
		<Border BorderThickness="2" BorderBrush="#ff999999" CornerRadius="5 5 5 5" Background="White">
			<StackPanel Orientation="Vertical" Margin="10">
				<TextBlock x:Name="txtMessage" FontSize="12" FontWeight="bold" Text="" TextWrapping="Wrap" Margin="0 0 0 10"></TextBlock>
				<Button x:Name="btnClose" Width="40" Height="20" Content="close" Margin="0 10 0 0" Click="OnCloseClick" TabIndex="1"></Button>
			</StackPanel>
		</Border>

	</Grid>
</UserControl>